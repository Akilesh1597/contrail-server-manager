#!/bin/bash

setenforce 0
setsebool -P httpd_can_network_connect_cobbler 1
iptables -F


service httpd restart
service sqlite restart
service cobblerd restart

service puppetmaster start
service puppet start


cobbler sync
#XINETD and NTPD to be restarted after cobbler sync.
service xinetd restart
service ntpd restart

mkdir -p /var/run/contrail_smgrd/
nohup /opt/contrail/server_manager/server_mgr_main.py -c /opt/contrail/server_manager/smgr_config.ini 0<&- &> /var/run/contrail_smgrd/contrail_smgrd.log&
